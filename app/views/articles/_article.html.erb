<div class="bg-light rounded card p-2 m-4" id="<%= dom_id article %>">
  <p>
    <div class="card-category"
    <% if article.photo.present? %>
    style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= cl_image_path(article.photo.key, height: 300, crop: :fill) %>')">
    <% else %>
    style="background-color: #666;">
    <% end %>
    <%= article.title %>
    </div>
  </p>

  <% article.photos.each do |photo| %>
    <%= cl_image_tag photo.key, height: 300, width: 400, crop: :fill %>
  <% end %>

  <p>
    <strong>Body:</strong>
    <%= article.body %>
  </p>
</div>


